<html>
    <head>
        #parse('views/inc/style.vm')
    </head>
    <body>
        <section id="main">
            #parse('views/inc/header.vm')
            <div class="container hgt10">
            </div>
            <div class="container">
                <div class="row" style="margin: 0px;">
                    <div style="float:left">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">所有分类 <span class="caret"></span>
                            </button>
                            <ul id="indexMenu" class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Action</a>
                                </li>
                                <li>
                                    <a href="#">Another action</a>
                                </li>
                                <li>
                                    <a href="#">Something else here</a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="#">Separated link</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div style="float:left;padding-left:10px;">
                        <ul id="navList" class="nav nav-pills" role="tablist">
                            <li role="presentation" class="active">
                                <a href="#" class="navLink">最新</a>
                            </li>
                            <li role="presentation">
                                <a href="#" class="navLink">新主题</a>
                            </li>
                            <li role="presentation">
                                <a href="#" class="navLink">未读</a>
                            </li>
                            <li role="presentation">
                                <a href="#" class="navLink"><span class="glyphicon glyphicon-star"></span>&nbsp;收藏</a>
                            </li>
                            <li role="presentation">
                                <a href="#" class="navLink">热门</a>
                            </li>
                            <li role="presentation">
                                <a href="#" class="navLink">分类</a>
                            </li>
                        </ul>
                    </div>
					<div style="float:right;padding-left:10px;">
						<button class="btn btn-primary btn-small" onclick="jQuery('#reply-control').css('display','block')">
                        <i class="glyphicon glyphicon-plus"></i>&nbsp;创建主题 </button>
                    </div>
                </div>
            </div>
            <div class="container hgt10">
            </div>
            <div class="container">
                <table id="topicList" class="table table-striped topicList">
                    <thead>
                        <tr>
                            <th>主题</th>
                            <th style="width:120px;">分类</th>
                            <th style="width:204px;">参与者</th>
                            <th style="width:60px;">帖子</th>
                            <th style="width:60px;">浏览</th>
                            <th style="width:170px;">活动</th>
                        </tr>
                    </thead>
                    <tbody>
#foreach($topic in $topicList)
                        <tr>
                            <td><a href="${contextPath}/topic-${topic.topicId}.html">$topic.title</a></td>
                            <td>$topic.userId</td>
                            <td>$topic.categoryId</td>
                            <td>$topic.posts</td>
                            <td>$topic.views</td>
                            <td>$topic.updateTime</td>
                        </tr>
#end
                    </tbody>
                </table>
#pagination($contextPath, $pageInfo)
            </div>
            <div id="noTopic" class="container" style="display:none">
                <h3> 没有更多主题可看了。</h3>
            </div>
            <div id="reply-control" class="container" style="">
				<div class="container hgt10"></div>
				<div>
				<a title="隐藏或显示编辑面板" data-ember-action="119" class="toggler" href="#" onclick="jQuery('#reply-control').css('display','none')"><span class="glyphicon glyphicon-chevron-down"></span></a>
                <strong>创建一个新主题</strong>
                </div>
				<div class="container hgt10"></div>
				<div class="container" style="width: 100%; padding-left: 0px;">
    				<div style="width:400px;float:left;">
                    <input type="email" placeholder="简述此讨论内容是关于什么？" id="exampleInputEmail1" class="form-control" style="width:400px" />
    				</div>
					<div style="width:400px;float:left;">
					 <select class="selectpicker" multiple data-max-options="2">
                        <optgroup label="Condiments" data-max-options="2">
                        <option>Mustard</option>
                        <option>Ketchup</option>
                        <option>Relish</option>
                        </optgroup>
                        <optgroup label="Breads" data-max-options="2">
                        <option>Plain</option>
                        <option>Steamed</option>
                        <option>Toasted</option>
                        </optgroup>
                    </select>
                    </div>
				</div>
				<div class="container hgt10">
				</div>
                    <script type="text/plain" id="myEditor" class="container" style="height:200px;">
                        <p>这里我可以写一些输入提示</p>
                    </script>
				<div class="container hgt10">
				</div>
	            <div class="container" style="width: 100%; padding-left: 0px;">
                    <button class="btn btn-primary btn-small login-button" data-toggle="modal" data-target="#login">
                        <i class="glyphicon glyphicon-plus"></i>&nbsp;创建主题 </button>
                    <button class="btn btn-danger btn-small login-button" data-toggle="modal" data-target="#login">
                        <i class="glyphicon glyphicon-remove"></i>&nbsp;取消 </button>
                </div>
				<div class="container hgt10">
				</div>
            </div>
</section>
#parse('views/inc/account.vm')
#parse('views/inc/js.vm')
<script type="text/javascript">
    //实例化编辑器
    var um = UM.getEditor('myEditor', {minFrameHeight:"200px"});
    um.addListener('blur',function(){
    $('#focush2').html('编辑器失去焦点了')
    });
    um.addListener('focus',function(){
    $('#focush2').html('')
    });

	jQuery('.selectpicker').selectpicker();
</script>
</body>
</html>
